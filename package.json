{
  "name": "commerceplate",
  "version": "1.0.0",
  "author": "Killian Vervelle",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern",
    "lint:ci": "npm run lint -- --max-warnings=0",
    "lint:files": "eslint --no-error-on-unmatched-pattern",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky",
    "format": "prettier -w ./src",
    "test": "vitest",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=dot --coverage --passWithNoTests",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "remove-darkmode": "node scripts/removeDarkmode.js && yarn format"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*.{json,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.12.1",
    "@justinribeiro/lite-youtube": "^1.7.1",
    "@sendgrid/mail": "^8.1.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "js-cookie": "^3.0.5",
    "marked": "^15.0.8",
    "next": "15.3.0",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-gravatar": "^2.6.3",
    "react-icons": "^5.5.0",
    "remark-gfm": "^4.0.1",
    "remark-slug": "^7.0.1",
    "swiper": "^11.2.6",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.14.1",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@types/react-gravatar": "^2.6.14",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.3.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
